# Environment Configuration

# Node Environment
NODE_ENV=development  # Set to 'production' in production

# Server Configuration
PORT=3001  # API server port

# CORS Configuration 
CORS_ORIGIN=http://localhost:5173  # Frontend URL in development

# File Uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Image Processing
IMAGE_QUALITY=85  # JPEG image quality (1-100)
MAX_WIDTH=1600  # Maximum width for processed images
MAX_HEIGHT=1600  # Maximum height for processed images

# Serverless Configuration
ENABLE_SERVERLESS=false  # Set to 'true' when deployed to Vercel